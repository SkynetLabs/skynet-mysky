{
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,

    "lib": ["dom", "esnext", "webworker"],
    "outDir": "dist",
    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["scripts/**/*.ts", "types/**/*.d.ts"]
}
